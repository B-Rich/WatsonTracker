= form_for @task do |f|
  = render '/partials/error_messages', :object => @task, :as => :object
  .field
    Title
    %br
    = f.text_field :title
  .field
    Description
    %br
    = f.text_area :description
  - unless @tasks.count == 0
    .field
      Prerequisites
      - @tasks.each do |task|
        %li
          = check_box_tag 'task_ids[]', task.id, @task.prerequisites.where("prereq = ?", task.id) ? true : false
          = task.title
  .actions
    = f.submit
